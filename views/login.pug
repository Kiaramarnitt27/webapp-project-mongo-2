extends layout

block content
  nav
    div(class='nav-wrapper')
      a(class='left brand-logo') LUT-Blog
      ul(id='nav-mobile', class='right')
        li
          a(href='../') 
            i(class='material-icons') home

  h5= title

  if message
    p #{message}

  div(class= 'row center')   
  form(method='POST' action='/login/check') 
            div(class='row')
              //-Username
              div(class='col s2 m2 l1')
                i(class='medium material-icons circle') person      
              div(class='input-field col s10 m4 l5')
                input.form-control(type='text', placeholder='New User Name' name='username' class='validate')
                label(for='name') Name:
              //-Password
              div(class='col s2 m2 l1')
                i(class='medium material-icons circle') lock      
              div(class='input-field col s10 m4 l5')
                label(for='password') Password:
                input.form-control(type='password', placeholder='Password' name='password' class='validate')
            button.btn.btn-primary(type='submit') Log In