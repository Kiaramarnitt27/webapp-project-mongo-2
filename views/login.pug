extends layout

block content
  nav
    div(class='nav-wrapper')
      a(class='left brand-logo') LUT-Blog
      ul(id='nav-mobile', class='right')
        li
          a(href='./') 
            i(class='material-icons') home

  h4= title

  if message
    p message

  div(class=row)   
  form(method='POST' action='/login/check' class='col s12 m6' ) 
            div(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') person      
              div(class='input-field col s10 m4 l4')
                input.form-control(type='text', placeholder='New User Name' name='username' class='validate')
                label(for='name') Name:
            div(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') lock      
              div(class='input-field col s10 m4 l4')
                label(for='password') Password:
                input.form-control(type='password', placeholder='Password' name='password' class='validate')
            button.btn.btn-primary(type='submit') Log In